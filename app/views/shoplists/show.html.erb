<% provide(:title, "| "+@shoplist.name) %>

<h1><%= @shoplist.name %></h1>
<div class="row">
  <div class="span8">
    <% if @shoplist.products.any? %>

        <table>
          <tr>
            <th><b>Názov produktu</b></th>
            <th><b>Billa</b></th>
            <th><b>Carrefour</b></th>
            <th><b>Kaufland</b></th>
            <th><b>Lidl</b></th>
            <th><b>Tesco</b></th>
          </tr>
          <% @ordProducts.each do |product,prices| %>
              <tr>
                <td><%= product %></td>
              <% prices.each do |shop,price| %>
                    <td><%= price %></td>
              <% end %>
              </tr>
          <%end%>
        </table>

    <% end %>
  </div>
</div>

<br>
<%= link_to "Pridať produkty", shoplist_products_path(@shoplist.id), class: "btn btn-success"%>